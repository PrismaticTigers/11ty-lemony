<li>
  <article class="snippit">
    <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippit__image">
    <h3 class="snippit__title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h3>
    <p class="snippit__meta">by
      <span>{{ post.data.author }} on {{ post.date | postDate }}</span>
    </p>
    <p class="snippit__body">{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="btn btn--primary">Read More</a>
  </article>
</li>